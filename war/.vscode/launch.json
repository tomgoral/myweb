{
  "version":"0.2.0",
  "configurations": [
   

    {
      "name": "Launch Edge",
      "request": "launch",
      "type": "pwa-msedge",
      "url": "http://localhost:8080",
      "file": "${workspaceFolder}/index.html"
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:8080", 
      "file": "${workspaceFolder}/index.html"
    },
    {
      "name": "Launch Microsoft Edge and open the Edge DevTools",
      "request": "launch",
      "type": "vscode-edge-devtools.debug",
      "url": "http://localhost:8080",
      "file": "${workspaceFolder}/index.html"
    }
  ]
}